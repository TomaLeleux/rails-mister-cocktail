<h1>List of cocktails</h1>

<%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= image = cocktail.name.tr(' ','_') %>
          <%= cl_image_tag "#{image}.jpg", height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


