<div class="banner">
  <div class="banner-content">
    <h1>Cocktail God</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <%= link_to "Cocktails", "#cocktails", class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="text-center">
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>

<div class="card-container">
  <div class="row" id="cocktails">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 col-lg-3">
        <%= link_to cocktail_path(cocktail) do %>
          <% image = cocktail.name.tr(' ','_') + ".jpg" %>
          <div class="card text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path image, height: 300, width: 400, crop: :fill %>')">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


