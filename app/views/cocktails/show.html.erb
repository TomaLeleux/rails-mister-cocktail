<h1 class="text-center"><%= @cocktail.name %></h1>

<div class="card">
  <%= image = @cocktail.name.tr(' ','_') %>
  <%= cl_image_tag "#{image}.jpg", height: 300, width: 400, crop: :fill, class: "card-img-top" %>
  <div class="card-body">
    <h4 class="card-title"><%= @cocktail.name %></h4>
    <ul>
      <% @doses.each do |dose| %>
        <li>
          <%= "#{dose.description} #{dose.ingredient.name}" %>
          <%= link_to '<i class="fa fa-trash"></i>'.html_safe, dose_path(dose.id),
            method: :delete,
            data: { confirm: "Delete #{dose.ingredient.name}?" } %>
        </li>
      <% end %>
    </ul>
  </div>

</div>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<hr>

<i class="fa fa-undo" aria-hidden="true">
  <%= link_to "Back to the list", cocktails_path, class: "link" %>
</i>
