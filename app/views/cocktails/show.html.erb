<% image = @cocktail.name.tr(' ','_') + ".jpg" %>
<div class="card_show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path image, height: 300, width: 400, crop: :fill %>')">
  <div class="card-category"><%= @cocktail.name %></div>
  <div class="card-description">
  </div>
</div>

<%= render 'doses/form', dose: @dose %>

<hr>

<i class="fa fa-undo" aria-hidden="true">
  <%= link_to "Back to the list", cocktails_path, class: "link" %>
</i>
